<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAssignment.HangmanGamePage"
             Title="MAUI Hangman Assignment">
    <VerticalStackLayout>
        <Label Text="Welcome to Hangman" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontAttributes="Bold" FontSize="40"/>
        <Image x:Name="HangmanImage" Margin="40" Source="hang1.png" HorizontalOptions="Center"/>
        <Label x:Name="wordLabel" FontAttributes="Bold" FontSize="30" HorizontalOptions="Center" Margin="40" Text="C_RR_EN__G_UE_S"/>
        <Entry x:Name="GuessEntry" FontSize="30" HorizontalOptions="Center" Margin="40" Placeholder="Enter your next guess"/>
        <Button Text="Guess" Clicked="OnGuessButtonClicked"/>
        <Label x:Name="AttemptsLabel" FontSize="20" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>